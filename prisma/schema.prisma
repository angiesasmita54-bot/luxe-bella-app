// Prisma schema for Luxe Bella App
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  STAFF
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentMethod {
  CARD
  ZELLE
  APPLE_PAY
  GOOGLE_PAY
  CASH
  DEPOSIT
}

enum PaymentStatus {
  PENDING
  COMPLETED
  REFUNDED
  FAILED
}

enum NotificationType {
  EMAIL
  SMS
  PUSH
  WHATSAPP
}

enum LoyaltyTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?
  phone         String?
  birthday      DateTime?
  role          UserRole  @default(CUSTOMER)
  
  // Authentication
  accounts      Account[]
  sessions      Session[]
  
  // Customer specific
  customerProfile CustomerProfile?
  appointments  Appointment[]
  payments      Payment[]
  reviews       Review[]
  loyaltyPoints LoyaltyPoints?
  badges        Badge[]
  coupons       Coupon[]
  
  // Staff specific
  staffProfile  StaffProfile?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CustomerProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  skinType    String?
  allergies   String?  @db.Text
  preferences String?  @db.Text
  notes       String?  @db.Text
  loyaltyTier LoyaltyTier @default(BRONZE)
  totalVisits Int      @default(0)
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StaffProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  position  String?
  schedule  Json?    // Store working hours/schedule
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text
  benefits    String?  @db.Text
  duration    Int      // Duration in minutes
  price       Float
  image       String?
  category    String?
  active      Boolean  @default(true)
  
  appointments Appointment[]
  reviews      Review[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Appointment {
  id          String            @id @default(cuid())
  userId      String
  serviceId   String
  staffId     String?           // Assigned staff member
  dateTime    DateTime
  status      AppointmentStatus @default(PENDING)
  notes       String?           @db.Text
  reminderSent48h Boolean       @default(false)
  reminderSent24h Boolean       @default(false)
  reminderSent1h  Boolean       @default(false)
  
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  service     Service           @relation(fields: [serviceId], references: [id])
  payment     Payment?
  review      Review?
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  @@index([userId])
  @@index([dateTime])
  @@index([status])
}

model Payment {
  id            String        @id @default(cuid())
  userId        String
  appointmentId String?       @unique
  amount        Float
  depositAmount Float?        // If partial payment/deposit
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  transactionId String?       // Payment gateway transaction ID
  receiptUrl    String?
  
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointment   Appointment?  @relation(fields: [appointmentId], references: [id])
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@index([userId])
  @@index([status])
}

model Review {
  id            String      @id @default(cuid())
  userId        String
  serviceId     String
  appointmentId String?     @unique
  rating        Int         // 1-5 stars
  comment       String?     @db.Text
  images        String[]    // Array of image URLs
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  service       Service     @relation(fields: [serviceId], references: [id])
  appointment   Appointment? @relation(fields: [appointmentId], references: [id])
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([serviceId])
  @@index([rating])
}

model LoyaltyPoints {
  id            String   @id @default(cuid())
  userId        String   @unique
  points        Int      @default(0)
  totalEarned   Int      @default(0)
  totalRedeemed Int      @default(0)
  visits        Int      @default(0)
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  transactions  LoyaltyTransaction[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LoyaltyTransaction {
  id            String   @id @default(cuid())
  loyaltyPointsId String
  points        Int
  type          String   // EARNED, REDEEMED
  description   String?
  appointmentId String?
  
  loyaltyPoints LoyaltyPoints @relation(fields: [loyaltyPointsId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
}

model Badge {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  icon        String?
  unlockedAt  DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model Coupon {
  id          String   @id @default(cuid())
  code        String   @unique
  title       String
  description String?  @db.Text
  discount    Float    // Percentage or fixed amount
  discountType String  // PERCENTAGE, FIXED
  minAmount   Float?
  maxDiscount Float?
  validFrom   DateTime
  validUntil  DateTime
  active      Boolean  @default(true)
  usageLimit  Int?
  usedCount   Int      @default(0)
  
  users       User[]   // Many-to-many relationship
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([code])
  @@index([active])
}

model Notification {
  id          String           @id @default(cuid())
  userId      String?
  type        NotificationType
  title       String
  message     String           @db.Text
  sent        Boolean          @default(false)
  sentAt      DateTime?
  read        Boolean          @default(false)
  readAt      DateTime?
  metadata    Json?            // Additional data
  
  createdAt   DateTime         @default(now())
  
  @@index([userId])
  @@index([sent])
  @@index([type])
}

model NotificationSchedule {
  id            String   @id @default(cuid())
  appointmentId String
  scheduledFor  DateTime
  type          String   // REMINDER_48H, REMINDER_24H, REMINDER_1H, BIRTHDAY, POST_SERVICE
  sent          Boolean  @default(false)
  sentAt        DateTime?
  
  createdAt     DateTime @default(now())
  
  @@index([scheduledFor])
  @@index([sent])
}

model Report {
  id          String   @id @default(cuid())
  type        String   // BILLING, MISSED_APPOINTMENTS, BEST_SELLING_SERVICES
  period      String   // DAILY, WEEKLY, MONTHLY
  data        Json
  generatedAt DateTime @default(now())
  
  @@index([type])
  @@index([generatedAt])
}

